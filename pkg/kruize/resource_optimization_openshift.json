                        "query": "sum(avg_over_time(container_memory_rss{cluster=\"$CLUSTER_NAME$\",namespace=\"$NAMESPACE$\",pod=~\"$WORKLOAD_NAME$-[^-]*-[^-]*\",container=\"$CONTAINER_NAME$\"}[$MEASUREMENT_DURATION$]))"
